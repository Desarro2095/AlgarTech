
@{
    ViewBag.Title = "Producto";
}

<div class="jumbotron">
    <h1>Pedalea</h1>
    <p class="lead">Realiza la consulta de productos</p>
</div>

<div class="row">
    <div class="col-md-4">
        <input type="hidden" id="productoId" />
        <div class="form-group">
            <label for="productoNombre">Nombre</label>
            <input type="text" class="form-control" id="productoNombre" name="productoNombre" placeholder="Nombre">
        </div>
        <div class="form-group">
            <label for="productoPrecio">Precio</label>
            <input type="text" class="form-control" id="productoPrecio" name="productoPrecio" placeholder="Precio">
        </div>
        <div class="form-group">
            <label for="productoTalla">Talla</label>
            <select class="form-control" id="productoTalla">
            </select>
        </div>
        <div class="form-group">
            <label for="productoColor">Color</label>
            <select class="form-control" id="productoColor">
            </select>
        </div>
        <div class="form-group">
            <label for="productoDepartamento">Departamento</label>
            <select class="form-control" id="productoDepartamento">
            </select>
        </div>
        <div class="form-group">
            <button type="button" id="guardaProducto" class="btn btn-primary">Guardar</button>
            <button type="button" id="nuevoProducto" class="btn btn-primary">Nuevo</button>
            <button type="button" id="eliminarProducto" class="btn btn-primary">Eliminar</button>
        </div>
    </div>
    <div class="col-md-6">
        <h2>Productos</h2>
        <table id="productoTable" class="display" style="width:100%">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Precio</th>
                    <th>Talla</th>
                    <th>Color</th>
                    <th>Departamento</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>Nombre</th>
                    <th>Precio</th>
                    <th>Talla</th>
                    <th>Color</th>
                    <th>Departamento</th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>

